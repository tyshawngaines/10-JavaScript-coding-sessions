function a(x){
    if(x<5){
        x*=.90
        
    }
    else if(x<18){
        x*=.88
        
    }
    else if(x<40){
        x*=.78
        
    }
    else if(x<75){
        x*=.76
        
    }
    else if(x<96){
        x*=.68
        
    }
    else if(x<240){
        x*=.65
        
    }
    else{
        x*=.63
        
    }
}
